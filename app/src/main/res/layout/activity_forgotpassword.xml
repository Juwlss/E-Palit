<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".forgotPass">

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/icon_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/icon_close"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/icon_forgotpassword" />

    <TextView
        android:id="@+id/lbl_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_forgotpassword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/interbold"
        android:text="Forgot Password?"
        android:textColor="#094067"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_description"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_forgotpassword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/interbold"
        android:text="Please enter your email address to receive a verification code."
        android:textColor="#646464"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_description"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="Enter email"
        android:textColor="#646464"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lbl_email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_border"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/edit_email"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/inter"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <ImageView
        android:id="@+id/design"
        android:layout_width="119dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/design" />

</RelativeLayout>