<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForgotPassword.forgotPass">

    <ImageView
        android:id="@+id/icon_forgotpassword"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_undraw_forgot_password_re_hxwm_1" />

    <TextView
        android:id="@+id/lbl_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/interbold"
        android:text="Forgot Password?"
        android:textColor="#094067"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_forgotpassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/interbold"
        android:text="Please enter your username to \nreset your password"
        android:textColor="#646464"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username_reset"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_below="@+id/lbl_description"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/edit_text_border"
        android:hint="Username"
        android:inputType="text"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_10ssp" />





    <Button
        android:id="@+id/btn_forgotpassword"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/username_reset"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/interbold"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <ImageView
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="-10dp"
        app:srcCompat="@drawable/ic_group_26" />


    <TextView
        android:id="@+id/txtviw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_forgotpassword"
        android:layout_marginTop="@dimen/_30sdp"/>

    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="458dp" />






</RelativeLayout>