<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FullPostFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/btnOffer"
        android:backgroundTint="#3DA9FC"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_20sdp"
        app:tint="@android:color/white"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/interbold"
        android:textAlignment="center"
        android:text="Make Offer"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnPostBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnPostBack"
                android:layout_alignBottom="@+id/btnPostBack"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter"
                android:text="Item Name"
                android:textColor="#094067"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />



            <RelativeLayout
                android:id="@+id/rl_post"
                android:layout_below="@+id/btnPostBack"
                android:layout_width="wrap_content"
                android:background="#E5E5E5"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userProfile"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@id/userProfile"
                            android:fontFamily="@font/inter"
                            android:maxLines="1"
                            android:text="Username"
                            android:textColor="#333333"
                            android:textFontWeight="600"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/username"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@id/userProfile"
                            android:maxLines="1"
                            android:text="Location"
                            android:textColor="#5F6C7B"
                            android:textFontWeight="500" />

                        <ImageView
                            android:id="@+id/postImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_180sdp"
                            android:layout_below="@+id/userProfile"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/paulouser" />

                        <RelativeLayout
                            android:id="@+id/rLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postImage"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/react"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:src="@drawable/ic_baseline_favorite_border_24" />

                            <ImageView
                                android:id="@+id/people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:layout_toRightOf="@id/react"
                                android:src="@drawable/ic_baseline_people_24" />

                            <ImageView
                                android:id="@+id/message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:src="@drawable/ic_baseline_message_24" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rLayout">

                            <TextView
                                android:id="@+id/itemCondition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/inter"
                                android:text="Condition"
                                android:textColor="#094067"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itemDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/itemCondition"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/inter"
                                android:text="Details"
                                android:textColor="#094067"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itemValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/itemDetails"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/inter"
                                android:text="Estimated Value"
                                android:textColor="#094067"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itemPref"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/itemValue"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/inter"
                                android:text="Preference"
                                android:textColor="#094067"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_post"
                android:background="#D8EEFE">

                <TextView
                    android:id="@+id/lblPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/interbold"
                    android:text="PENDING OFFERS"
                    android:textColor="#094067"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblPending"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/inter"
                    android:text="Timer"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="#094067"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_Offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timer"
                    android:layout_marginTop="2dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/offer_layout" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>